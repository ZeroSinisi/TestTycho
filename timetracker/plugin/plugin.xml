<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="4.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run class="me.natejones.testtycho.timetracker.Application">
         </run>
      </application>
   </extension>
   <extension point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="me.natejones.testtycho.timetracker.Perspective"
            id="timetracker.perspective">
      </perspective>
   </extension>
   <extension point="org.eclipse.ui.views">
      <view name="View"
            class="me.natejones.testtycho.timetracker.View"
            id="timetracker.view">
      </view>
   </extension>
   <extension point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="timetracker.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension id="product" point="org.eclipse.core.runtime.products">
      <product application="timetracker.application"
            name="timetracker.product">
         <property name="appName" value="Time Tracker">
         </property>
      </product>
   </extension>

</plugin>
